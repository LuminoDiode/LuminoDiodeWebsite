@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Website.Models.DocumentWithAuthorStruct

<div class="card" style="max-height:50vh">
    <div class="card-body">
        <h5 class="card-title">
            <a asp-controller="Document" asp-action="Show" asp-route-id="@Model.Document.Id">
                @Model.Document.Title
            </a>
        </h5>
        <h6 class="card-subtitle">
            <a asp-controller="Document" asp-action="User" asp-route-id="@Model.AuthorUser.Id">
                @Model.AuthorUser.FirstName @Model.AuthorUser.LastName
            </a>
        </h6>
        <p class="card-text">@(Component.InvokeAsync("DocumentParagraph", Model.Document.Paragraphs[0]).Result)</p>
    </div>
</div>