@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Website.Models.Auth.LoginOnly
@{
	Layout = "~/Views/Shared/_Layout.cshtml";

	if (Model != null)
	{
		if (Model.EmailPlainText == null) Model.EmailPlainText = string.Empty;
	}
}
<div class="container row">
	<div class="col col-md-4"></div>
	<div class="col col-md-4">
		<div class="display-4 text-center p-1">Log in</div>

		@using (Html.BeginForm("NewAuthLogin", "User", FormMethod.Post))
		{
			<div class="input-group input-group-xxl">
				<div class="container-fluid p-2">
					<div class="d-xl-flex justify-content-between">
						<div class="w-100">
							@Html.LabelFor(Model=>Model.EmailPlainText)
						</div>
						<div class="w-100">
							@Html.EditorFor(Model=>Model.EmailPlainText)
						</div>
					</div>
					@Html.ValidationMessageFor(Model=>Model.EmailPlainText,"",new {@class="text-danger"})
				</div>
				<div class="container-fluid p-2">
					<input class="btn btn-sm btn-outline-dark col-12 p-2" type="submit" value="Submit" />
				</div>
			</div>
		}
	</div>
	<div class="col col-md-4"></div>
</div>

